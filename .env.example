# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=performance_test
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=password
CLICKHOUSE_MEMORY=4g
CLICKHOUSE_CPUS=2

# PostgreSQL Configuration (No Index) - Port 5432
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=performance_test
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MEMORY=4g
POSTGRES_CPUS=2

# PostgreSQL Configuration (With Index) - Port 5433
# Runs on a separate container for fair comparison
POSTGRES_INDEXED_HOST=localhost
POSTGRES_INDEXED_PORT=5433
POSTGRES_INDEXED_DATABASE=performance_test
POSTGRES_INDEXED_USERNAME=postgres
POSTGRES_INDEXED_PASSWORD=postgres
POSTGRES_INDEXED_MEMORY=4g
POSTGRES_INDEXED_CPUS=2

# Test Configuration
# Dataset size for single tests (default: 10000000) (Minimum test size 10k)
DATASET_SIZE=10000000
# Batch size for data insertion (default: 50000)
BATCH_SIZE=50000
# Enable parallel insertion for faster data loading (default: false)
PARALLEL_INSERT=true
# Number of parallel workers for insertion (default: 4)
PARALLEL_WORKERS=4

# Single Test Query Configuration
# Number of iterations for query-only tests (default: 100)
QUERY_TEST_ITERATIONS=100
# Time limit in minutes for single query tests (default: 60)
QUERY_TEST_TIME_LIMIT=60

# Bulk Test Configuration
# Comma-separated dataset sizes for bulk testing (default: 10000,50000,100000,500000,1000000,5000000,10000000) (Minimum test size 10k)
BULK_TEST_SIZES=10000,50000,100000,500000,1000000,5000000,10000000
# Comma-separated database types to test (default: all databases) Options: clickhouse,postgresql,postgresql-indexed
BULK_TEST_DATABASES=
# Time limit in minutes for each query test during bulk testing (default: 60)
BULK_TEST_TIME_LIMIT=60
# Output directory for bulk test results (default: output)
BULK_TEST_OUTPUT_DIR=output